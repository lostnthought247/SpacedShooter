#: import Window kivy.core.window.Window

<PlayerShip>
    size: 50, 50
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle - 90
            origin: self.center
    canvas.after:
        PopMatrix
    canvas:
        Ellipse:
            source: root.skin
            pos: self.pos
            size: 75, 75

<AsteroidObj>
    size: 50, 50
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle - 90
            origin: self.center
    canvas.after:
        PopMatrix
    canvas:
        Ellipse:
            source: root.temp_get_asteroid()
            pos: self.pos
            size: 75, 75

<HostileShip>
    size: 50, 50
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle - 90
            origin: self.center
    canvas.after:
        PopMatrix
    canvas:
        Ellipse:
            source: root.temp_get_hostile()
            pos: self.pos
            #size: self.size

<PlayerWeapons>
    size: 78, 27
    size_hint: None, None
    canvas:
        Ellipse:
            source: root.skin
            pos: self.pos
            size: self.size
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
    canvas.after:
        PopMatrix


<CombatScreen>
    name: "Combat"
    player: player_ship
    hostile: hostile_ship
    asteroid: asteroid_obj
    Image:
        allow_stretch: True
        keep_ratio: False
        pos: self.pos
        size: self.size
        source: choose(screenconfig[root.name]['bg'])

    FloatLayout:
        id: GameView
        canvas:
            Rectangle:
                texture: root.score_label.texture
                pos: (0, Window.height - 50)
                size: root.score_label.texture.size
        PlayerShip:
            id: player_ship
            size_hint: None, None

        HostileShip:
            id: hostile_ship
            size_hint: None, None
            pos: 400, 400

        AsteroidObj:
            id: asteroid_obj
            size_hint: None, None
            pos: 300, 300
